                                    <label for="Category_name" class="pr-5" style="font-weight: normal;">Category Name:</label>
                                </div>
                                <div class="col-md-9 ">

                                    @Html.TextBoxFor(e => e.Category_Name, new { @class = "form-control", id = "Product_Name", name = "product_Name", placeholder = "Product Name", required = "required" })

                                </div>
                            </div>
                            <button type="submit" form="form-category" data-bs-toggle="tooltip" title="" class="btn btn-primary" data-bs-original-title="Save" aria-label="Save"><i class="fas fa-save"></i></button>
                            

                            <button type="submit class="btn btn-primary btn-block" data-bs-toggle="tooltip" title="Add Category ">Save</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>


    <!-- main content end -->
    <!-- /. main content  ended-->
</div>
<!-- /.content-wrapper ends here  -->
}
<script>
    $.widget.bridge('uibutton', $.ui.button)
    $(function () {
        $('[data-toggle="tooltip"]').tooltip()
    })
</script>





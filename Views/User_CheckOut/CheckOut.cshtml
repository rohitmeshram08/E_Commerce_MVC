@model NEW_E_COMMERCE_WEB_APPLICATION.Models.CheckOut
@{
    ViewBag.Title = "CheckOut";
    Layout = "~/Views/Shared/Organic_Index.cshtml";
}

<!-- Checkout Section Begin -->
<section class="checkout spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h6>
                    <span class="icon_tag_alt"></span> Have a coupon? <a href="#">Click here</a> to enter your code
                </h6>
            </div>
        </div>
        <div class="checkout__form">
            <h4>Billing Details</h4>
            @using (Html.BeginForm("CheckOut", "User_CheckOut", FormMethod.Post))
            {
                <div class="row">
                    <div class="col-lg-8 col-md-6">
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="checkout__input">
                                    <p>First Name<span>*</span></p>
                                    @Html.TextBoxFor(c => c.firstname, new { @class = "form-control", placeholder = "Enter First Name" })
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="checkout__input">
                                    <p>Last Name<span>*</span></p>
                                    @Html.TextBoxFor(c => c.lastname, new { @class = "form-control", placeholder = "Enter First Name" })
                                </div>
                            </div>
                        </div>
                        <div class="checkout__input">
                            <p>Country<span>*</span></p>
                            @Html.TextBoxFor(c => c.country, new { @class = "form-control", placeholder = "Enter First Name" })
                        </div>
                        <div class="checkout__input">
                            <p>Address<span>*</span></p>
                            @Html.TextBoxFor(c => c.address, new { @class = "form-control", placeholder = "Enter First Name" })
                            <input type="text" placeholder="Apartment, suite, unite ect (optinal)">
                        </div>
                        <div class="checkout__input">
                            <p>Town/City<span>*</span></p>
                            @Html.TextBoxFor(c => c.city, new { @class = "form-control", placeholder = "Enter First Name" })
                        </div>
                        <div class="checkout__input">
                            <p>Country/State<span>*</span></p>
                            @Html.TextBoxFor(c => c.state, new { @class = "form-control", placeholder = "Enter First Name" })
                        </div>
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="checkout__input">
                                    <p>Phone<span>*</span></p>
                                    @Html.TextBoxFor(c => c.mob_number, new { @class = "form-control", placeholder = "Enter First Name" })
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="checkout__input">
                                    <p>Email<span>*</span></p>
                                    @Html.TextBoxFor(c => c.email, new { @class = "form-control", placeholder = "Enter First Name" })
                                </div>
                            </div>
                        </div>
                        @*<div class="checkout__input__checkbox">
                            <label for="acc">
                                Create an account?
                                <input type="checkbox" id="acc">
                                <span class="checkmark"></span>
                            </label>
                        </div>*@
                       
                        <div class="checkout__input">
                            <p>Account Password<span>*</span></p>
                            @Html.TextBoxFor(c => c.account_Password, new { @class = "form-control", placeholder = "Enter First Name" })

                        </div>
                        <div class="checkout__input">
                            <p>Order notes<span>*</span></p>
                            @Html.TextBoxFor(c => c.order_Note, new { @class = "form-control", placeholder = "Enter First Name" })

                        </div>
                        <p>
                            Create an account by entering the information below. If you are a returning customer
                            please login at the top of the page
                        </p>
                    </div>
                    <div class="col-lg-4 col-md-6">
                        <div class="checkout__order">
                            <h4>Your Order</h4>
                            <div class="checkout__order__products">Products <span>Total</span></div>
                            <ul>
                                <li>Vegetable’s Package <span>$75.99</span></li>
                                <li>Fresh Vegetable <span>$151.99</span></li>
                                <li>Organic Bananas <span>$53.99</span></li>
                            </ul>
                            <div class="checkout__order__subtotal">Subtotal <span>$750.99</span></div>
                            <div class="checkout__order__total">Total <span>$750.99</span></div>
                            <div class="checkout__input__checkbox">
                                <label for="acc-or">
                                    Create an account?
                                    <input type="checkbox" id="acc-or">
                                    <span class="checkmark"></span>
                                </label>
                            </div>
                            <p>
                                Lorem ipsum dolor sit amet, consectetur adip elit, sed do eiusmod tempor incididunt
                                ut labore et dolore magna aliqua.
                            </p>
                            <div class="checkout__input__checkbox">
                                <label for="payment">
                                    Check Payment
                                    <input type="checkbox" id="payment">
                                    <span class="checkmark"></span>
                                </label>
                            </div>
                            <div class="checkout__input__checkbox">
                                <label for="paypal">
                                    Paypal
                                    <input type="checkbox" id="paypal">
                                    <span class="checkmark"></span>
                                </label>
                            </div>
                            <button type="submit" class="site-btn">PLACE ORDER</button>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
<!-- Checkout Section End -->
